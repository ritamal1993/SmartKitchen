@model IEnumerable<SmartKitchen3.Models.User>
@using SmartKitchen3.Models

@{
    ViewBag.Title = "Index";
}
@section Scripts{
    <script type="text/javascript" src="~/Scripts/SearchTable.js"></script>
}
<link rel="stylesheet" href="~/Content/Design.css" />
<h2>Manage Users</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<input class="form-control" id="searchable" type="text" placeholder="Search..">
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Kitchen.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admin)
            </th>
           <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody id="search-table">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Kitchen.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Admin)
                </td>
                <td>
                
                    @Html.Partial("_TableButtonPartial", new IndividualButtonPartial { UserId = item.UserId })
                
                </td>
            </tr>
        }
    </tbody>
</table>
