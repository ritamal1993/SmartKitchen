            <label>Preferred Calendar</label><br />
            @Html.ListBoxFor(m => m.UserCalendar, (MultiSelectList)ViewBag.List, new { })
        </div>*@


            <div class="form-group">
                <input asp-for="KitchenId" class="form-control" type="hidden" name="KitchenId" value=@ViewBag.KitchenId />
            </div>
            <div class="form-group">
                <input type="submit" value="CREATE" class="btn btn-sm btn-success" />
            </div>
        </form>
    </div>
</div>



