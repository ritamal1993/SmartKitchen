@model SmartKitchen3.Models.Category
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Edit Category</h3>
        <hr />

        <div class="form-border">
            @Html.HiddenFor(m=>m.CategoryId)

            <div class="form-group">
                @Html.LabelFor(m=>m.CategoryName, htmlAttributes: new { @class="control-lable col-md-2"})

                <div class="col-md-10">
                    @Html.EditorFor(m=>m.CategoryName, new { htmlAttributes= new {@class="form-control" }  })
                    @Html.ValidationMessageFor(m=>m.CategoryName, "", new {@class="text-danger" })
                </div>
            </div>
        </div>
    </div>

    <br />
    <div>
        @Html.Partial("_BackToListButtonPartial")
        <input type="submit"  value="Save" class="btn btn-sm btn-success" />
    </div>
}

