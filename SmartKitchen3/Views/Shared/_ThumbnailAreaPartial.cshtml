@model SmartKitchen3.ViewModel.ThumbnailBoxViewModel
<div class="row">
    @if (Model.Thumbnails != null)
    {
        foreach (var thumbnail in Model.Thumbnails)
        {
            <div class="col-xs-6 col-md-3">
                <div class="thumbnail">
                    <div class="thumbnail-img-container">
                        <a href="@thumbnail.Link"><img class="thumbanil-img" src="@thumbnail.ImageUrl" style="width:100%;height:auto" alt="" /></a>
                    </div>
                    <div class="caption">
                        <h3><a id="@thumbnail.Recipeid" class="recipe_link" href="@thumbnail.Link">@thumbnail.Title</a></h3>
                        <p>@Html.Raw(thumbnail.Instructions)</p>
                    </div>
                </div>
            </div>
        }
    }
</div>
